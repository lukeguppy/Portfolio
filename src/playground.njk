layout: base.njk
title: Playground
pageTitle: Playground
---

<section class="page-header">
    <h1>Playground</h1>
    <p>Interactive projects and experiments I've built</p>
</section>

<section class="section">
    <div class="container">
        <div class="playground-grid">
            {% for item in site.games %}
            <a class="playground-card" href="{{ item.playUrl | url }}">
                <img src="{{ item.image | url }}" alt="{{ item.title }}">
                <h3>{{ item.title }}</h3>
                <p>{{ item.description }}</p>
            </a>
            {% endfor %}
        </div>
    </div>
</section>